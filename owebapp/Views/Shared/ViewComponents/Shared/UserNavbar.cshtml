@using Sirkadirov.Overtest.WebApplication.ViewComponents.Shared

@model Sirkadirov.Overtest.Libraries.Shared.Database.Storage.Identity.User

<nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
  <div class="container">
    
    <a class="navbar-brand" href="@Url.Action()">Overtest</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#@nameof(UserNavbarViewComponent)">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="@nameof(UserNavbarViewComponent)">
      
      <ul class="navbar-nav mr-auto">
        
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Welcome" asp-action="Home">@Localizer["Головна"]</a>
        </li>
        
        @* Tasks Archive *@
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">@Localizer["Завдання"]</a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="#">@Localizer["Архів завдань"]</a>
            <a class="dropdown-item" href="#">@Localizer["Завдання по категоріях"]</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">@Localizer["Відкладені"]</a>
          </div>
        </li>
        
        @* Social features *@
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">@Localizer["Користувачі"]</a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="#">>@Localizer["Мої групи"]</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">>@Localizer["Глобальний рейтинг"]</a>
          </div>
        </li>
        
        @if (Model.Type == UserType.Student)
        {
          @* Competitions *@
          <li class="nav-item">
            <a class="nav-link" href="#">@Localizer["Змагання"]</a>
          </li>
        }
        
        @if (Model.Type != UserType.Anonymous && Model.Type != UserType.Student)
        {
          @* Administration *@
          <li class="nav-item">
            <a class="nav-link font-weight-bold text-danger" href="#"><i class="fas fa-user-shield"></i> @Localizer["Адміністрування"]</a>
          </li>
        }
        
      </ul>
      
      @* User menu *@
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown"><i class="fas fa-id-card"></i> @Localizer["Користувач"]</a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="#">@Localizer["Моя сторінка"]</a>
            <a class="dropdown-item" href="#">@Localizer["Редагувати сторінку"]</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">@Localizer["Початок роботи"]</a>
            <a class="dropdown-item" href="#">@Localizer["Про систему"]</a>
            <a class="dropdown-item" href="#">@Localizer["Документація"]</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">@Localizer["Вийти з системи"]</a>
          </div>
        </li>
      </ul>
      
    </div>
    
  </div>
</nav>