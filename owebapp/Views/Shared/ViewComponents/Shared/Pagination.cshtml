@model Sirkadirov.Overtest.WebApplication.Models.Shared.Pagination.PaginationInfo

<nav class="mt-3">
  <ul class="pagination justify-content-center">

    <li class="page-item" title="@Localizer["Перейти на першу сторінку"]">
      <a class="page-link" asp-route-page="1"><i class="fas fa-angle-double-left"></i></a>
    </li>
    
    @if (Model.HasPreviousPage)
    {
      <li class="page-item"><a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">@(Model.CurrentPage - 1)</a></li>
    }
    
    <li class="page-item active disabled"><a class="page-link" asp-route-page="@Model.CurrentPage">@Model.CurrentPage</a></li>
    
    @if (Model.HasNextPage)
    {
      <li class="page-item"><a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">@(Model.CurrentPage + 1)</a></li>
    }

    <li class="page-item" title="@Localizer["Перейти на останню сторінку"]">
      <a class="page-link" asp-route-page="@(Model.TotalPages > 0 ? Model.TotalPages : 1)"><i class="fas fa-angle-double-right"></i></a>
    </li>

  </ul>
</nav>